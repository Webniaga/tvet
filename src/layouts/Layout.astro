---
export interface Props {
  title?: string;
  description?: string;
}

const { title = "AKADEMI TVET UNIRAZAK", description = "Empowering Skills. Transforming Futures." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    /* Custom Red Color for Hero Elements */
    --custom-red: #99002F;

    /* Color System - Deep Dark Red (Burgundy/Maroon) TVET Theme */
    /* Deep Burgundy - Primary (Based on RGB: 100, 22, 22) */
    --primary-50: #fdf2f2;
    --primary-100: #fce7e7;
    --primary-200: #f9d2d2;
    --primary-300: #f4b0b0;
    --primary-400: #ec8080;
    --primary-500: #e05555;
    --primary-600: #cd3333;
    --primary-700: #ab2222;
    --primary-800: #8d1e1e;
    --primary-900: #641616; /* Main burgundy color */

    /* Rich Maroon - Secondary (Complementary burgundy tones) */
    --secondary-50: #fdf2f4;
    --secondary-100: #fce7ea;
    --secondary-200: #f9d2d8;
    --secondary-300: #f4b0bb;
    --secondary-400: #ec8095;
    --secondary-500: #e05570;
    --secondary-600: #cd3355;
    --secondary-700: #ab2244;
    --secondary-800: #8d1e3a;
    --secondary-900: #641633;

    /* Dark Wine - Accent (Deeper burgundy for accents) */
    --accent-50: #fdf2f3;
    --accent-100: #fce7e8;
    --accent-200: #f9d2d4;
    --accent-300: #f4b0b4;
    --accent-400: #ec8088;
    --accent-500: #e05560;
    --accent-600: #cd3344;
    --accent-700: #ab2233;
    --accent-800: #8d1e2a;
    --accent-900: #641622;

    --success-500: #10b981;
    --warning-500: #f59e0b;
    --error-500: #ef4444;

    /* Enhanced Gray Scale for Better Contrast with Burgundy Background */
    --gray-50: #fafafa;
    --gray-100: #f5f5f5;
    --gray-200: #e5e5e5;
    --gray-300: #d4d4d4;
    --gray-400: #a3a3a3;
    --gray-500: #737373;
    --gray-600: #525252;
    --gray-700: #404040;
    --gray-750: #2d2d2d;
    --gray-800: #262626;
    --gray-900: #171717;

    /* Spacing System (8px base) */
    --space-1: 0.5rem;
    --space-2: 1rem;
    --space-3: 1.5rem;
    --space-4: 2rem;
    --space-5: 2.5rem;
    --space-6: 3rem;
    --space-8: 4rem;
    --space-10: 5rem;
    --space-12: 6rem;
    --space-16: 8rem;
    --space-20: 10rem;

    /* Typography */
    --font-sans: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    --line-height-body: 1.5;
    --line-height-heading: 1.2;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
    background: linear-gradient(135deg, #641616 0%, #4a1010 50%, #2d0808 100%);
    min-height: 100vh;
  }

  body {
    font-family: var(--font-sans);
    line-height: var(--line-height-body);
    color: var(--gray-100);
    background: linear-gradient(135deg, #641616 0%, #4a1010 50%, #2d0808 100%);
    background-attachment: fixed;
    min-height: 100vh;
    overflow-x: hidden;
  }

  /* Typography */
  h1, h2, h3, h4, h5, h6 {
    line-height: var(--line-height-heading);
    font-weight: 600;
    color: white;
  }

  h1 { font-size: clamp(2rem, 4vw, 3.5rem); }
  h2 { font-size: clamp(1.5rem, 3vw, 2.5rem); }
  h3 { font-size: clamp(1.25rem, 2.5vw, 1.875rem); }
  h4 { font-size: clamp(1.125rem, 2vw, 1.5rem); }

  p {
    font-size: 1rem;
    color: var(--gray-300);
    margin-bottom: var(--space-3);
  }

  /* Utilities */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-3);
  }

  .section {
    padding: var(--space-12) 0;
    position: relative;
  }

  .section-alt {
    background: rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(10px);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-1);
    padding: var(--space-2) var(--space-4);
    border-radius: 0.5rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
    cursor: pointer;
    border: none;
    font-size: 1rem;
  }

  .btn-primary {
    background: linear-gradient(135deg, var(--primary-700), var(--primary-600));
    color: white;
    box-shadow: 0 4px 12px rgba(100, 22, 22, 0.25);
  }

  .btn-primary:hover {
    background: linear-gradient(135deg, var(--primary-800), var(--primary-700));
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(100, 22, 22, 0.3);
  }

  .btn-secondary {
    background: rgba(255, 255, 255, 0.1);
    color: white;
    border: 2px solid var(--secondary-600);
    backdrop-filter: blur(10px);
  }

  .btn-secondary:hover {
    background: var(--secondary-600);
    color: white;
    transform: translateY(-2px);
  }

  .btn-accent {
    background: linear-gradient(135deg, var(--accent-700), var(--accent-600));
    color: white;
    box-shadow: 0 4px 12px rgba(100, 22, 34, 0.25);
  }

  .btn-accent:hover {
    background: linear-gradient(135deg, var(--accent-800), var(--accent-700));
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(100, 22, 34, 0.3);
  }

  .card {
    background: rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(10px);
    border-radius: 1rem;
    padding: var(--space-6);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.3), 0 2px 4px -1px rgba(0, 0, 0, 0.2);
    transition: all 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 40px -8px rgba(0, 0, 0, 0.4);
    background: rgba(0, 0, 0, 0.5);
  }

  .grid {
    display: grid;
    gap: var(--space-6);
  }

  .grid-2 {
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  }

  .grid-3 {
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  }

  .grid-4 {
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  }

  .text-center { text-align: center; }
  .text-primary { color: var(--primary-400); }
  .text-secondary { color: var(--secondary-400); }
  .text-accent { color: var(--accent-400); }

  .fade-in {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.8s ease forwards;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .container {
      padding: 0 var(--space-2);
    }

    .section {
      padding: var(--space-8) 0;
    }

    .btn {
      padding: var(--space-3) var(--space-4);
      font-size: 0.875rem;
    }
  }
</style>