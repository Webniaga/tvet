<section id="achievements" class="section">
  <div class="container">
    <div class="section-header text-center">
      <h2 class="fade-in">Achievements & Recognition</h2>
      <p class="fade-in">Celebrating excellence in technical and vocational education</p>
    </div>

    <div class="achievements-content">
      <div class="main-award fade-in">
        <div class="award-visual">
          <div class="award-icon">
            <svg width="64" height="64" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 15a3 3 0 100-6 3 3 0 000 6z"/>
              <path fill-rule="evenodd" d="M1.323 11.447C2.811 6.976 7.028 3.75 12.001 3.75c4.97 0 9.185 3.223 10.675 7.69.12.362.12.752 0 1.113-1.487 4.471-5.705 7.697-10.675 7.697-4.97 0-9.186-3.223-10.675-7.69a1.762 1.762 0 010-1.113zM17.25 12a5.25 5.25 0 11-10.5 0 5.25 5.25 0 0110.5 0z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="award-badge">
            <span class="award-year">2024</span>
          </div>
        </div>
        <div class="award-content">
          <h3>Malaysia's Best Accredited Centre</h3>
          <p class="award-category">Administrative Management Excellence</p>
          <p class="award-date">15 August 2024</p>
          <p class="award-description">
            Recognized as Malaysia's premier TVET institution for Administrative Management programs, 
            demonstrating exceptional standards in curriculum delivery, student outcomes, and industry integration.
          </p>
        </div>
      </div>

      <!-- Award Recognition Image -->
      <div class="award-image-section fade-in">
        <div class="award-image-container" data-achievement-image="0">
          <img 
            src="https://img.webniaga.my/tvet/achievement.PNG" 
            alt="Malaysia's Best Accredited Centre Award Ceremony - AKADEMI TVET UNIRAZAK receiving recognition for excellence in Administrative Management"
            loading="lazy"
          />
          <div class="image-overlay">
            <div class="overlay-content">
              <div class="overlay-icon">
                <svg width="48" height="48" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"/>
                </svg>
              </div>
              <h4>View Full Image</h4>
              <p>Click to view the award ceremony in full detail</p>
            </div>
          </div>
        </div>
        <div class="image-caption">
          <h4>Excellence in TVET Education</h4>
          <p>Our commitment to providing world-class technical and vocational education has been recognized at the national level, reinforcing our position as a leading institution in Malaysia's TVET landscape.</p>
        </div>
      </div>

      <div class="achievements-grid grid grid-2">
        <div class="achievement-card fade-in">
          <div class="achievement-icon">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="currentColor">
              <path d="M4.26 10.147a60.438 60.438 0 00-.491 6.347A48.62 48.62 0 0112 20.904a48.62 48.62 0 018.232-4.41 60.46 60.46 0 00-.491-6.347m-15.482 0a50.636 50.636 0 00-2.658-.813A59.906 59.906 0 0112 3.493a59.903 59.903 0 0110.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.717 50.717 0 0112 13.489a50.702 50.702 0 017.74-3.342M6.75 15a.75.75 0 100-1.5.75.75 0 000 1.5zm0 0v-3.675A55.378 55.378 0 0112 8.443m-7.007 11.55A5.981 5.981 0 006.75 15.75v-1.5"/>
            </svg>
          </div>
          <div class="achievement-content">
            <h4>Outstanding Personality Award</h4>
            <p class="achievement-recipient">Azlin Shah Bin Zainal Abidin</p>
            <p class="achievement-description">
              Recognition for exceptional leadership and contribution to TVET education development in Malaysia.
            </p>
          </div>
        </div>

        <div class="achievement-card fade-in">
          <div class="achievement-icon">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25"/>
            </svg>
          </div>
          <div class="achievement-content">
            <h4>UNIRAZAK Excellence</h4>
            <p class="achievement-recipient">Institutional Strength</p>
            <p class="achievement-description">
              Recognized expertise in business, entrepreneurship, digital marketing, fintech, and Islamic Financial Planning.
            </p>
          </div>
        </div>
      </div>

      <!-- Certificate Gallery Section -->
      <div class="certificate-gallery fade-in">
        <div class="gallery-header text-center">
          <h3>Our Certifications</h3>
          <p>Official certificates showcasing our accredited programs and institutional recognition</p>
        </div>
        
        <div class="certificates-grid grid grid-2">
          <div class="certificate-card">
            <div class="certificate-image" data-certificate-image="1">
              <img 
                src="https://img.webniaga.my/tvet/tvetcert1.jpg" 
                alt="Early Childhood Education Certificate - AKADEMI TVET UNIRAZAK accreditation for Early Childhood Education program"
                loading="lazy"
              />
              <div class="certificate-overlay">
                <div class="overlay-content">
                  <svg width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"/>
                  </svg>
                  <span>View Certificate</span>
                </div>
              </div>
            </div>
            <div class="certificate-info">
              <h4>Early Childhood Education</h4>
              <p>Early Childhood Education Certificate - AKADEMI TVET UNIRAZAK accreditation for Early Childhood Education program.</p>
            </div>
          </div>

          <div class="certificate-card">
            <div class="certificate-image" data-certificate-image="2">
              <img 
                src="https://img.webniaga.my/tvet/tvetcert.jpg" 
                alt="Early Childhood Education Certificate - AKADEMI TVET UNIRAZAK accreditation for Early Childhood Education program"
                loading="lazy"
              />
              <div class="certificate-overlay">
                <div class="overlay-content">
                  <svg width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"/>
                  </svg>
                  <span>View Certificate</span>
                </div>
              </div>
            </div>
            <div class="certificate-info">
              <h4>Early Childhood Education</h4>
              <p>Certification recognizing our expertise in early childhood education and our dedication to nurturing young minds through quality education.</p>
            </div>
          </div>
        </div>
      </div>

      <div class="recognition-banner fade-in">
        <div class="banner-content">
          <div class="banner-icon">
            <svg width="56" height="56" viewBox="0 0 24 24" fill="currentColor">
              <path d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
          </div>
          <div class="banner-text">
            <h3>Officially Accredited</h3>
            <p>Registered under Jabatan Pembangunan Kemahiran (JPK), Ministry of Human Resources Malaysia</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .achievements-content {
    max-width: 1000px;
    margin: 0 auto;
  }

  .main-award {
    display: flex;
    align-items: center;
    gap: var(--space-6);
    background: linear-gradient(135deg, var(--accent-900), var(--accent-800));
    padding: var(--space-8);
    border-radius: 2rem;
    margin-bottom: var(--space-8);
    border: 1px solid var(--accent-700);
    position: relative;
    overflow: hidden;
  }

  .main-award::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(184, 32, 144, 0.1) 0%, transparent 70%);
    animation: rotate 20s linear infinite;
  }

  @keyframes rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .award-visual {
    position: relative;
    flex-shrink: 0;
  }

  .award-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 120px;
    height: 120px;
    background: linear-gradient(135deg, var(--accent-500), var(--accent-600));
    color: white;
    border-radius: 50%;
    box-shadow: 0 8px 32px rgba(184, 32, 144, 0.3);
    position: relative;
    z-index: 1;
  }

  .award-badge {
    position: absolute;
    top: -8px;
    right: -8px;
    background: var(--primary-600);
    color: white;
    padding: var(--space-1) var(--space-2);
    border-radius: 1rem;
    font-size: 0.75rem;
    font-weight: 700;
    z-index: 2;
  }

  .award-content {
    flex: 1;
    position: relative;
    z-index: 1;
  }

  .award-content h3 {
    font-size: 2rem;
    color: var(--accent-400);
    margin-bottom: var(--space-2);
  }

  .award-category {
    color: var(--accent-300);
    font-weight: 600;
    font-size: 1.125rem;
    margin-bottom: var(--space-1);
  }

  .award-date {
    color: var(--gray-400);
    font-size: 0.875rem;
    margin-bottom: var(--space-3);
  }

  .award-description {
    color: var(--gray-200);
    line-height: 1.6;
    margin: 0;
  }

  /* Award Image Section */
  .award-image-section {
    margin-bottom: var(--space-8);
  }

  .award-image-container {
    position: relative;
    width: 100%;
    height: 400px;
    border-radius: 1.5rem;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    margin-bottom: var(--space-4);
    cursor: pointer;
  }

  .award-image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .award-image-container:hover img {
    transform: scale(1.05);
  }

  .image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(224, 43, 109, 0.9), rgba(184, 32, 144, 0.9));
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .award-image-container:hover .image-overlay {
    opacity: 1;
  }

  .overlay-content {
    text-align: center;
    color: white;
  }

  .overlay-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    margin: 0 auto var(--space-3);
  }

  .overlay-content h4 {
    color: white;
    font-size: 1.5rem;
    margin-bottom: var(--space-2);
  }

  .overlay-content p {
    color: rgba(255, 255, 255, 0.9);
    max-width: 400px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .image-caption {
    text-align: center;
    padding: var(--space-4);
    background: var(--gray-800);
    border-radius: 1rem;
    border: 1px solid var(--gray-700);
  }

  .image-caption h4 {
    color: var(--accent-400);
    font-size: 1.25rem;
    margin-bottom: var(--space-2);
  }

  .image-caption p {
    color: var(--gray-300);
    line-height: 1.6;
    margin: 0;
  }

  .achievements-grid {
    margin-bottom: var(--space-8);
  }

  .achievement-card {
    background: var(--gray-800);
    padding: var(--space-6);
    border-radius: 1.5rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.3);
    transition: all 0.3s ease;
    border: 1px solid var(--gray-700);
  }

  .achievement-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 40px -8px rgba(0, 0, 0, 0.4);
    border-color: var(--primary-600);
  }

  .achievement-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, var(--primary-900), var(--secondary-900));
    color: var(--primary-400);
    border-radius: 1.25rem;
    margin-bottom: var(--space-4);
  }

  .achievement-content h4 {
    color: var(--gray-100);
    margin-bottom: var(--space-2);
    font-size: 1.25rem;
  }

  .achievement-recipient {
    color: var(--primary-400);
    font-weight: 600;
    margin-bottom: var(--space-3);
  }

  .achievement-description {
    color: var(--gray-400);
    line-height: 1.6;
    margin: 0;
  }

  /* Certificate Gallery Styles */
  .certificate-gallery {
    margin-bottom: var(--space-8);
  }

  .gallery-header {
    margin-bottom: var(--space-8);
  }

  .gallery-header h3 {
    color: var(--accent-400);
    font-size: 2rem;
    margin-bottom: var(--space-3);
  }

  .gallery-header p {
    color: var(--gray-400);
    font-size: 1.125rem;
    max-width: 600px;
    margin: 0 auto;
  }

  .certificates-grid {
    gap: var(--space-6);
  }

  .certificate-card {
    background: var(--gray-800);
    border-radius: 1.5rem;
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    transition: all 0.3s ease;
    border: 1px solid var(--gray-700);
  }

  .certificate-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
    border-color: var(--accent-600);
  }

  .certificate-image {
    position: relative;
    width: 100%;
    height: 300px;
    overflow: hidden;
    cursor: pointer;
  }

  .certificate-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .certificate-card:hover .certificate-image img {
    transform: scale(1.05);
  }

  .certificate-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(224, 43, 109, 0.9), rgba(184, 32, 144, 0.9));
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .certificate-card:hover .certificate-overlay {
    opacity: 1;
  }

  .overlay-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-2);
    color: white;
    text-align: center;
  }

  .overlay-content span {
    font-weight: 600;
    font-size: 1.125rem;
  }

  .certificate-info {
    padding: var(--space-6);
  }

  .certificate-info h4 {
    color: var(--gray-100);
    font-size: 1.375rem;
    margin-bottom: var(--space-3);
  }

  .certificate-info p {
    color: var(--gray-400);
    line-height: 1.6;
    margin: 0;
  }

  .recognition-banner {
    background: linear-gradient(135deg, var(--primary-600), var(--secondary-600));
    color: white;
    padding: var(--space-6);
    border-radius: 1.5rem;
    position: relative;
    overflow: hidden;
  }

  .recognition-banner::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="50" cy="50" r="1" fill="rgba(255,255,255,0.1)"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
    opacity: 0.5;
  }

  .banner-content {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    position: relative;
    z-index: 1;
  }

  .banner-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 1.25rem;
    flex-shrink: 0;
  }

  .banner-text h3 {
    color: white;
    margin-bottom: var(--space-2);
    font-size: 1.5rem;
  }

  .banner-text p {
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .main-award {
      flex-direction: column;
      text-align: center;
      padding: var(--space-6);
    }

    .award-content h3 {
      font-size: 1.5rem;
    }

    .banner-content {
      flex-direction: column;
      text-align: center;
    }

    .achievement-card {
      padding: var(--space-4);
    }

    .achievement-icon {
      width: 64px;
      height: 64px;
    }

    .certificates-grid {
      grid-template-columns: 1fr;
    }

    .certificate-image {
      height: 250px;
    }

    .certificate-info {
      padding: var(--space-4);
    }

    .gallery-header h3 {
      font-size: 1.5rem;
    }

    .gallery-header p {
      font-size: 1rem;
    }

    .award-image-container {
      height: 250px;
    }

    .overlay-content h4 {
      font-size: 1.25rem;
    }

    .overlay-icon {
      width: 60px;
      height: 60px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Define achievement images
    const achievementImages = [
      {
        src: 'https://img.webniaga.my/tvet/achievement.PNG',
        alt: 'Malaysia\'s Best Accredited Centre Award Ceremony - AKADEMI TVET UNIRAZAK receiving recognition for excellence in Administrative Management',
        title: 'Malaysia\'s Best Accredited Centre Award',
        description: 'AKADEMI TVET UNIRAZAK receiving recognition for excellence in Administrative Management at the national award ceremony.'
      },
      {
        src: 'https://img.webniaga.my/tvet/tvetcert1.jpg',
        alt: 'Early Childhood Education Certificate - AKADEMI TVET UNIRAZAK accreditation for Early Childhood Education program',
        title: 'Early Childhood Education Certificate',
        description: 'Official accreditation certificate for Early Childhood Education program from AKADEMI TVET UNIRAZAK.'
      },
      {
        src: 'https://img.webniaga.my/tvet/tvetcert.jpg',
        alt: 'Early Childhood Education Certificate - AKADEMI TVET UNIRAZAK accreditation for Early Childhood Education program',
        title: 'Early Childhood Education Certificate',
        description: 'Certification recognizing our expertise in early childhood education and dedication to nurturing young minds through quality education.'
      }
    ];

    // Event listeners for achievement image
    const achievementImage = document.querySelector('[data-achievement-image]');
    if (achievementImage) {
      achievementImage.addEventListener('click', () => {
        if (window.lightboxManager) {
          window.lightboxManager.openLightbox(achievementImages, 0);
        }
      });
    }

    // Event listeners for certificate images
    const certificateImages = document.querySelectorAll('[data-certificate-image]');
    certificateImages.forEach((container) => {
      container.addEventListener('click', () => {
        const imageIndex = parseInt(container.getAttribute('data-certificate-image'));
        if (window.lightboxManager) {
          window.lightboxManager.openLightbox(achievementImages, imageIndex);
        }
      });
    });
  });
</script>