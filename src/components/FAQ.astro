<style>
  .faq-content {
    max-width: 1000px;
    margin: 0 auto;
  }

  .faq-categories {
    margin-bottom: var(--space-8);
  }

  .category-tabs {
    display: flex;
    justify-content: center;
    gap: var(--space-2);
    margin-bottom: var(--space-8);
    flex-wrap: wrap;
  }

  .tab-btn {
    background: var(--gray-800);
    color: var(--gray-300);
    border: 2px solid var(--gray-700);
    padding: var(--space-3) var(--space-4);
    border-radius: 0.75rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 0.875rem;
  }

  .tab-btn:hover {
    background: var(--gray-700);
    color: var(--gray-100);
  }

  .tab-btn.active {
    background: linear-gradient(135deg, var(--primary-600), var(--primary-500));
    color: white;
    border-color: var(--primary-500);
  }

  .faq-category {
    display: none;
  }

  .faq-category.active {
    display: block;
  }

  .faq-grid {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .faq-item {
    background: var(--gray-800);
    border-radius: 1rem;
    border: 1px solid var(--gray-700);
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .faq-item:hover {
    border-color: var(--primary-600);
    box-shadow: 0 4px 12px rgba(224, 43, 109, 0.1);
  }

  .faq-question {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-4);
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .faq-question:hover {
    background: var(--gray-750);
  }

  .faq-question h4 {
    color: var(--gray-100);
    margin: 0;
    font-size: 1.125rem;
    font-weight: 600;
    flex: 1;
    padding-right: var(--space-3);
  }

  .faq-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    background: var(--primary-600);
    color: white;
    border-radius: 50%;
    transition: all 0.3s ease;
    flex-shrink: 0;
  }

  .faq-item.active .faq-toggle {
    background: var(--secondary-600);
    transform: rotate(45deg);
  }

  .faq-answer {
    padding: 0 var(--space-4) var(--space-4);
    color: var(--gray-300);
    line-height: 1.6;
    max-height: 0;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .faq-item.active .faq-answer {
    max-height: 1000px;
    padding-top: var(--space-2);
  }

  .faq-answer p {
    margin-bottom: var(--space-3);
  }

  .faq-answer ul {
    list-style: none;
    padding-left: 0;
    margin-bottom: var(--space-3);
  }

  .faq-answer li {
    position: relative;
    padding-left: var(--space-4);
    margin-bottom: var(--space-2);
    color: var(--gray-300);
  }

  .faq-answer li::before {
    content: '•';
    position: absolute;
    left: 0;
    color: var(--primary-400);
    font-weight: bold;
    font-size: 1.2em;
  }

  .faq-answer strong {
    color: var(--primary-400);
    font-weight: 600;
  }

  .contact-info-faq h5 {
    color: var(--primary-400);
    margin-bottom: var(--space-3);
    font-size: 1.125rem;
  }

  .contact-methods-faq {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .contact-method-faq {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2);
    background: var(--gray-900);
    border-radius: 0.5rem;
    border: 1px solid var(--gray-700);
  }

  .contact-method-faq svg {
    color: var(--primary-400);
    flex-shrink: 0;
  }

  .contact-method-faq span {
    color: var(--gray-200);
    font-weight: 500;
  }

  /* FAQ CTA */
  .faq-cta {
    background: linear-gradient(135deg, var(--secondary-600), var(--accent-600));
    color: white;
    padding: var(--space-8);
    border-radius: 1.5rem;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .faq-cta::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="50" cy="50" r="1" fill="rgba(255,255,255,0.1)"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
    opacity: 0.5;
  }

  .cta-content {
    position: relative;
    z-index: 1;
  }

  .cta-content h3 {
    color: white;
    margin-bottom: var(--space-3);
    font-size: 2rem;
  }

  .cta-content p {
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: var(--space-6);
    font-size: 1.125rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-buttons {
    display: flex;
    gap: var(--space-4);
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-lg {
    padding: var(--space-3) var(--space-6);
    font-size: 1.125rem;
  }

  @media (max-width: 768px) {
    .category-tabs {
      flex-direction: column;
      align-items: center;
    }

    .tab-btn {
      width: 100%;
      max-width: 280px;
      text-align: center;
    }

    .faq-question {
      padding: var(--space-3);
    }

    .faq-question h4 {
      font-size: 1rem;
    }

    .faq-answer {
      padding: 0 var(--space-3) var(--space-3);
    }

    .contact-methods-faq {
      align-items: center;
    }

    .contact-method-faq {
      justify-content: center;
      text-align: center;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }

    .btn-lg {
      width: 100%;
      max-width: 280px;
      justify-content: center;
    }

    .cta-content h3 {
      font-size: 1.5rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const tabBtns = document.querySelectorAll('.tab-btn');
    const faqCategories = document.querySelectorAll('.faq-category');
    const faqItems = document.querySelectorAll('.faq-item');

    // Tab switching functionality
    tabBtns.forEach(btn => {
      btn.addEventListener('click', function() {
        const category = this.getAttribute('data-category');
        
        // Remove active class from all tabs and categories
        tabBtns.forEach(tab => tab.classList.remove('active'));
        faqCategories.forEach(cat => cat.classList.remove('active'));
        
        // Add active class to clicked tab and corresponding category
        this.classList.add('active');
        document.querySelector(`[data-category="${category}"].faq-category`).classList.add('active');
      });
    });

    // FAQ accordion functionality
    faqItems.forEach(item => {
      const question = item.querySelector('.faq-question');
      
      question.addEventListener('click', function() {
        const isActive = item.classList.contains('active');
        
        // Close all other FAQ items in the same category
        const currentCategory = item.closest('.faq-category');
        const categoryItems = currentCategory.querySelectorAll('.faq-item');
        categoryItems.forEach(categoryItem => {
          categoryItem.classList.remove('active');
        });
        
        // Toggle current item
        if (!isActive) {
          item.classList.add('active');
        }
      });
    });
  });
</script>