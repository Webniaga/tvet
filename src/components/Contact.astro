</section>

<style>
  .contact-content {
    max-width: 1200px;
    margin: 0 auto;
  }

  .contact-info {
    background: var(--gray-800);
    padding: var(--space-8);
    border-radius: 1.5rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.3);
    border: 1px solid var(--gray-700);
  }

  .contact-info h3 {
    color: var(--primary-400);
    margin-bottom: var(--space-3);
    font-size: 1.5rem;
  }

  .contact-description {
    color: var(--gray-400);
    margin-bottom: var(--space-6);
    line-height: 1.6;
  }

  .contact-methods {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    margin-bottom: var(--space-6);
  }

  .contact-method {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-3);
    background: var(--gray-900);
    border-radius: 0.75rem;
    transition: all 0.3s ease;
  }

  .contact-method:hover {
    background: var(--primary-900);
    transform: translateX(4px);
  }

  .method-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: var(--primary-900);
    color: var(--primary-400);
    border-radius: 0.75rem;
    flex-shrink: 0;
  }

  .method-icon.whatsapp {
    background: #1a4d3a;
    color: #25d366;
  }

  .method-content h4 {
    color: var(--gray-100);
    margin-bottom: 4px;
    font-size: 1rem;
  }

  .contact-link {
    color: var(--primary-400);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .contact-link:hover {
    color: var(--primary-300);
  }

  .contact-text {
    color: var(--gray-400);
    font-size: 0.875rem;
  }

  .office-hours {
    padding-top: var(--space-4);
    border-top: 1px solid var(--gray-700);
  }

  .office-hours h4 {
    color: var(--gray-100);
    margin-bottom: var(--space-3);
  }

  .hours-grid {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .hours-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-2);
    background: var(--gray-900);
    border-radius: 0.5rem;
  }

  .day {
    color: var(--gray-200);
    font-weight: 500;
  }

  .time {
    color: var(--gray-400);
    font-size: 0.875rem;
  }

  .form-container {
    background: var(--gray-800);
    padding: var(--space-8);
    border-radius: 1.5rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.3);
    border: 1px solid var(--gray-700);
  }

  .form-container h3 {
    color: var(--primary-400);
    margin-bottom: var(--space-2);
    font-size: 1.5rem;
  }

  .form-container p {
    color: var(--gray-400);
    margin-bottom: var(--space-6);
  }

  .form-group {
    margin-bottom: var(--space-4);
  }

  .form-group label {
    display: block;
    color: var(--gray-200);
    font-weight: 500;
    margin-bottom: var(--space-2);
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: var(--space-3);
    border: 2px solid var(--gray-700);
    border-radius: 0.75rem;
    font-size: 1rem;
    transition: all 0.3s ease;
    background: var(--gray-900);
    color: var(--gray-100);
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--primary-500);
    box-shadow: 0 0 0 3px rgba(224, 43, 109, 0.1);
  }

  .form-group textarea {
    resize: vertical;
    min-height: 100px;
  }

  .quick-actions {
    margin-top: var(--space-12);
  }

  .actions-header {
    margin-bottom: var(--space-8);
  }

  .actions-header h3 {
    color: var(--secondary-400);
    margin-bottom: var(--space-2);
    font-size: 1.5rem;
  }

  .action-card {
    background: var(--gray-800);
    padding: var(--space-6);
    border-radius: 1.5rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.3);
    transition: all 0.3s ease;
    border: 1px solid var(--gray-700);
    text-decoration: none;
    color: inherit;
    text-align: center;
  }

  .action-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 40px -8px rgba(0, 0, 0, 0.4);
    border-color: var(--secondary-600);
  }

  .action-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 64px;
    background: linear-gradient(135deg, var(--secondary-900), var(--secondary-800));
    color: var(--secondary-400);
    border-radius: 1rem;
    margin: 0 auto var(--space-4);
  }

  .action-card h4 {
    color: var(--gray-100);
    margin-bottom: var(--space-2);
    font-size: 1.125rem;
  }

  .action-card p {
    color: var(--gray-400);
    margin: 0;
    font-size: 0.875rem;
  }

  @media (max-width: 768px) {
    .contact-grid {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }

    .actions-grid {
      grid-template-columns: 1fr;
    }

    .contact-info,
    .form-container {
      padding: var(--space-6);
    }

    .contact-method {
      flex-direction: column;
      text-align: center;
    }

    .hours-item {
      flex-direction: column;
      gap: var(--space-1);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('contactForm');
    
    if (form) {
      form.addEventListener('submit', function(e) {
        e.preventDefault();
        
        // Get form data
        const formData = new FormData(form);
        const name = formData.get('name') || '';
        const email = formData.get('email') || '';
        const phone = formData.get('phone') || '';
        const program = formData.get('program') || '';
        const message = formData.get('message') || '';
        
        // Get program display name
        const programSelect = document.getElementById('program');
        const programDisplayName = programSelect.options[programSelect.selectedIndex].text;
        
        // Create WhatsApp message
        let whatsappMessage = `*New Inquiry from ATUR Website*\n\n`;
        whatsappMessage += `*Name:* ${name}\n`;
        whatsappMessage += `*Email:* ${email}\n`;
        
        if (phone) {
          whatsappMessage += `*Phone:* ${phone}\n`;
        }
        
        if (program && program !== '') {
          whatsappMessage += `*Program of Interest:* ${programDisplayName}\n`;
        }
        
        if (message) {
          whatsappMessage += `*Message:* ${message}\n`;
        }
        
        whatsappMessage += `\n_Sent from AKADEMI TVET UNIRAZAK website_`;
        
        // Encode the message for URL
        const encodedMessage = encodeURIComponent(whatsappMessage);
        
        // WhatsApp number (without + sign)
        const whatsappNumber = '601170167899';
        
        // Create WhatsApp URL
        const whatsappURL = `https://wa.me/${whatsappNumber}?text=${encodedMessage}`;
        
        // Open WhatsApp
        window.open(whatsappURL, '_blank');
        
        // Show success message
        alert('Redirecting to WhatsApp... Your message has been prepared and will be sent via WhatsApp.');
        
        // Reset form
        form.reset();
      });
    }
  });
</script>