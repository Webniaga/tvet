<style>
  .timeline-content {
    max-width: 800px;
    margin: 0 auto;
    position: relative;
  }

  .timeline-wrapper {
    position: relative;
    padding: var(--space-4) 0;
  }

  /* Timeline Line */
  .timeline-line {
    position: absolute;
    left: 50%;
    top: 0;
    bottom: 0;
    width: 4px;
    background: linear-gradient(180deg, var(--primary-600), var(--secondary-600), var(--accent-600));
    transform: translateX(-50%);
    border-radius: 2px;
    box-shadow: 0 0 20px rgba(224, 43, 109, 0.3);
  }

  /* Timeline Items */
  .timeline-item {
    position: relative;
    display: flex;
    align-items: center;
    margin-bottom: var(--space-8);
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.8s ease forwards;
  }

  .timeline-item:nth-child(even) {
    flex-direction: row-reverse;
  }

  .timeline-item:nth-child(even) .timeline-content-card {
    margin-right: var(--space-6);
    margin-left: 0;
  }

  .timeline-item:nth-child(odd) .timeline-content-card {
    margin-left: var(--space-6);
    margin-right: 0;
  }

  /* Timeline Marker */
  .timeline-marker {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    z-index: 2;
  }

  .timeline-dot {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, var(--primary-600), var(--primary-500));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    box-shadow: 0 8px 25px rgba(224, 43, 109, 0.4);
    border: 4px solid var(--gray-900);
    transition: all 0.3s ease;
  }

  .timeline-dot.award {
    background: linear-gradient(135deg, var(--accent-500), var(--accent-400));
    box-shadow: 0 8px 25px rgba(184, 32, 144, 0.5);
    animation: awardPulse 2s infinite;
  }

  .timeline-dot.future-dot {
    background: linear-gradient(135deg, var(--secondary-600), var(--secondary-500));
    box-shadow: 0 8px 25px rgba(224, 43, 109, 0.4);
  }

  @keyframes awardPulse {
    0%, 100% {
      box-shadow: 0 8px 25px rgba(184, 32, 144, 0.5), 0 0 0 0 rgba(184, 32, 144, 0.7);
    }
    50% {
      box-shadow: 0 8px 25px rgba(184, 32, 144, 0.5), 0 0 0 15px rgba(184, 32, 144, 0);
    }
  }

  .timeline-date {
    margin-top: var(--space-2);
    text-align: center;
    background: var(--gray-800);
    padding: var(--space-1) var(--space-2);
    border-radius: 0.75rem;
    border: 1px solid var(--gray-700);
    min-width: 80px;
  }

  .timeline-date .year {
    display: block;
    font-weight: 700;
    color: var(--primary-400);
    font-size: 1rem;
    line-height: 1.2;
  }

  .timeline-date .month {
    display: block;
    font-size: 0.75rem;
    color: var(--gray-400);
    font-weight: 500;
  }

  /* Timeline Content Cards */
  .timeline-content-card {
    background: var(--gray-800);
    border-radius: 1.5rem;
    padding: var(--space-6);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    border: 1px solid var(--gray-700);
    max-width: 350px;
    width: 100%;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .timeline-content-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--primary-600), var(--secondary-600));
  }

  .timeline-content-card.award-card::before {
    background: linear-gradient(90deg, var(--accent-500), var(--accent-400));
    height: 6px;
  }

  .timeline-content-card.future-card::before {
    background: linear-gradient(90deg, var(--secondary-600), var(--secondary-500));
  }

  .timeline-content-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
    border-color: var(--primary-600);
  }

  .timeline-content-card.award-card:hover {
    border-color: var(--accent-600);
  }

  .timeline-content-card.future-card:hover {
    border-color: var(--secondary-600);
  }

  /* Timeline Icons */
  .timeline-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 64px;
    background: linear-gradient(135deg, var(--primary-900), var(--primary-800));
    color: var(--primary-400);
    border-radius: 1rem;
    margin-bottom: var(--space-4);
    flex-shrink: 0;
  }

  .timeline-icon.award-icon {
    background: linear-gradient(135deg, var(--accent-900), var(--accent-800));
    color: var(--accent-400);
  }

  .timeline-icon.future-icon {
    background: linear-gradient(135deg, var(--secondary-900), var(--secondary-800));
    color: var(--secondary-400);
  }

  /* Timeline Text */
  .timeline-text h4 {
    color: var(--gray-100);
    margin-bottom: var(--space-3);
    font-size: 1.25rem;
    font-weight: 600;
  }

  .milestone-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .milestone-list p {
    color: var(--gray-300);
    margin: 0;
    font-size: 0.875rem;
    line-height: 1.5;
  }

  .award-text {
    color: var(--accent-400) !important;
    font-weight: 600 !important;
    font-size: 1rem !important;
  }

  /* Animation delays */
  .timeline-item:nth-child(1) { animation-delay: 0.1s; }
  .timeline-item:nth-child(2) { animation-delay: 0.2s; }
  .timeline-item:nth-child(3) { animation-delay: 0.3s; }
  .timeline-item:nth-child(4) { animation-delay: 0.4s; }
  .timeline-item:nth-child(5) { animation-delay: 0.5s; }
  .timeline-item:nth-child(6) { animation-delay: 0.6s; }
  .timeline-item:nth-child(7) { animation-delay: 0.7s; }
  .timeline-item:nth-child(8) { animation-delay: 0.8s; }
  .timeline-item:nth-child(9) { animation-delay: 0.9s; }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .timeline-line {
      left: 30px;
    }

    .timeline-item {
      flex-direction: row !important;
      align-items: flex-start;
    }

    .timeline-item:nth-child(even) .timeline-content-card,
    .timeline-item:nth-child(odd) .timeline-content-card {
      margin-left: var(--space-4);
      margin-right: 0;
      max-width: none;
    }

    .timeline-marker {
      position: absolute;
      left: 0;
      top: 0;
    }

    .timeline-dot {
      width: 50px;
      height: 50px;
    }

    .timeline-date {
      min-width: 70px;
      padding: var(--space-1);
    }

    .timeline-date .year {
      font-size: 0.875rem;
    }

    .timeline-date .month {
      font-size: 0.625rem;
    }

    .timeline-content-card {
      padding: var(--space-4);
      margin-left: 80px;
    }

    .timeline-icon {
      width: 48px;
      height: 48px;
      margin-bottom: var(--space-3);
    }

    .timeline-text h4 {
      font-size: 1.125rem;
    }

    .milestone-list p {
      font-size: 0.8rem;
    }
  }

  @media (max-width: 480px) {
    .timeline-content-card {
      margin-left: 70px;
      padding: var(--space-3);
    }

    .timeline-dot {
      width: 40px;
      height: 40px;
    }

    .timeline-date {
      min-width: 60px;
    }

    .timeline-icon {
      width: 40px;
      height: 40px;
    }

    .timeline-text h4 {
      font-size: 1rem;
    }
  }
</style>