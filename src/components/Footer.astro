<style>
  .footer {
    background: linear-gradient(135deg, var(--gray-900), var(--gray-800));
    color: white;
    padding: var(--space-12) 0 var(--space-4);
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
  }

  .footer-main {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: var(--space-8);
    margin-bottom: var(--space-8);
  }

  .footer-brand {
    max-width: 400px;
  }

  .footer-logo {
    color: var(--accent-400);
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: var(--space-2);
  }

  .footer-tagline {
    color: var(--accent-300);
    font-size: 1.125rem;
    font-weight: 500;
    margin-bottom: var(--space-3);
  }

  .footer-description {
    color: var(--gray-400);
    line-height: 1.6;
    margin: 0;
  }

  .footer-links {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-6);
  }

  .footer-section h4 {
    color: white;
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: var(--space-3);
  }

  .footer-section ul {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .footer-section a {
    color: var(--gray-400);
    text-decoration: none;
    transition: color 0.2s ease;
    font-size: 0.875rem;
  }

  .footer-section a:hover {
    color: var(--accent-400);
  }

  .contact-list li {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--gray-400);
    font-size: 0.875rem;
  }

  .contact-list svg {
    color: var(--accent-400);
    flex-shrink: 0;
  }

  .footer-cta {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .footer-cta .btn {
    justify-content: center;
    font-size: 0.875rem;
    padding: var(--space-2) var(--space-3);
  }

  .footer-certifications {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-4);
    padding: var(--space-6) 0;
    border-top: 1px solid var(--gray-700);
    border-bottom: 1px solid var(--gray-700);
    margin-bottom: var(--space-6);
  }

  .cert-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-3);
    background: rgba(255, 255, 255, 0.05);
    border-radius: 0.75rem;
    transition: all 0.3s ease;
  }

  .cert-item:hover {
    background: rgba(255, 255, 255, 0.1);
    transform: translateY(-2px);
  }

  .cert-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: var(--accent-600);
    color: white;
    border-radius: 0.75rem;
    flex-shrink: 0;
  }

  .cert-content h5 {
    color: white;
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 2px;
  }

  .cert-content p {
    color: var(--gray-400);
    font-size: 0.75rem;
    margin: 0;
  }

  .footer-bottom {
    padding-top: var(--space-4);
  }

  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--space-4);
  }

  .copyright {
    color: var(--gray-500);
    font-size: 0.875rem;
    margin: 0;
  }

  .footer-bottom-links {
    display: flex;
    gap: var(--space-4);
  }

  .footer-bottom-links a {
    color: var(--gray-500);
    text-decoration: none;
    font-size: 0.875rem;
    transition: color 0.2s ease;
  }

  .footer-bottom-links a:hover {
    color: var(--accent-400);
  }

  @media (max-width: 768px) {
    .footer {
      padding: var(--space-8) 0 var(--space-4);
    }

    .footer-main {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }

    .footer-links {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-4);
    }

    .footer-certifications {
      grid-template-columns: 1fr;
    }

    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
    }

    .footer-bottom-links {
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .footer-links {
      grid-template-columns: 1fr;
    }
  }
</style>