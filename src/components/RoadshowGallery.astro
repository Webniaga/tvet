---
import { roadshowImages } from '../data/roadshowImages.js';
---

<section id="roadshow" class="section">
  <div class="container">
    <div class="section-header text-center">
      <h2 class="fade-in">Roadshow Event Gallery</h2>
      <p class="fade-in">Highlights from our recent roadshow events showcasing TVET programs and opportunities</p>
    </div>

    <div class="roadshow-content">
      <!-- Slideshow Container -->
      <div class="slideshow-container fade-in">
        <div class="slideshow-wrapper" id="slideshow-wrapper">
          <div class="slides-track" id="slides-track">
            {roadshowImages.map((image, index) => (
              <div class="slide" data-image-index={index}>
                <div class="slide-image">
                  <img 
                    src={image.src} 
                    alt={image.alt}
                    loading="lazy"
                  />
                  <div class="slide-overlay">
                    <div class="overlay-content">
                      <div class="overlay-icon">
                        <svg width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
                          <path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"/>
                        </svg>
                      </div>
                      <h4>View Full Image</h4>
                    </div>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Slideshow Controls -->
        <div class="slideshow-controls">
          <button class="slide-nav slide-prev" id="slide-prev">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
              <path d="M15 18l-6-6 6-6"/>
            </svg>
          </button>
          <button class="slide-nav slide-next" id="slide-next">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
              <path d="M9 18l6-6-6-6"/>
            </svg>
          </button>
        </div>

        <!-- Slideshow Indicators -->
        <div class="slideshow-indicators" id="slideshow-indicators">
          {roadshowImages.map((_, index) => (
            <button class="indicator" data-slide={index}></button>
          ))}
        </div>

        <!-- Slideshow Counter -->
        <div class="slideshow-counter">
          <span id="slide-counter">1 / {roadshowImages.length}</span>
        </div>

        <!-- Auto-play Controls -->
        <div class="slideshow-autoplay">
          <button class="autoplay-btn" id="autoplay-btn">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" class="play-icon">
              <path d="M8 5v14l11-7z"/>
            </svg>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" class="pause-icon" style="display: none;">
              <path d="M6 19h4V5H6v14zm8-14v14h4V5h-4z"/>
            </svg>
          </button>
        </div>
      </div>

      <!-- Gallery CTA -->
      <div class="gallery-cta fade-in">
        <div class="cta-content">
          <h3>Join Our Next Roadshow Event</h3>
          <p>Stay updated with our upcoming roadshow events and discover the opportunities waiting for you at AKADEMI TVET UNIRAZAK.</p>
          <div class="cta-buttons">
            <a href="#contact" class="btn btn-primary btn-lg">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
              </svg>
              Get Event Updates
            </a>
            <a href="https://wa.me/601170167899" class="btn btn-secondary btn-lg">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
